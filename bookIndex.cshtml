
@{
    ViewBag.Title = "bookIndex";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
    

<h2 id="title"></h2>
<button class="btn btn-info" style="margin-bottom:10px; margin-right:10px" onclick="logout()">Logout</button>
<a class="btn btn-success" style="margin-bottom:10px"><i class="glyphicon glyphicon-import" ></i> Add New</a>
<table id="bookTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Name
            </th>
            <th>Author
            </th>
            <th>Publisher
            </th>
            <th>Count
            </th>
            <th>Department
            </th>
        </tr>
    </thead>
</table>

<link href="//cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.10.16/css/dataTables.jqueryui.min.css" rel="stylesheet" />
<link href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" rel="stylesheet" />



@section Scripts {

    <script src="//cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/dataTables.jqueryui.min.js"></script>
    <script type="text/javascript">
        if (sessionStorage.Index == "")
            window.location.href = "/Home/Index";

        $('#title').html("Welcome " + sessionStorage.Index);

        $('#bookTable').DataTable({
            "ajax": {
                "url": "/Book/GetBooks",
                "type": "GET",
                "datatype": "json"
            },
            "columns": [
                { "data": "Name" },
                { "data": "Author" },
                { "data": "Publisher" },
                { "data": "Count" },
                { "data": "Department" },
            ]
        });

        function logout() {
            sessionStorage.Index = "";
            window.location.href = "/Home/Index";
        }
    </script>

    @Scripts.Render("~/bundles/jqueryval")

}

